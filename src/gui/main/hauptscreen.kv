#:include src/gui/main/tasktable.kv


<HauptScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,0.2)
            Label:
                text: _('Aufgaben')
                font_size: '32dp'
                size_hint: (0.9,1)
            ActionToggleButton:
                text: 'Toggle sourcecode'
                icon: 'icons/einstellungen.png'
                size_hint: (0.1,1)
                on_release: app.open_settings()
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: listlayout
                cols: 1
                #orientation: 'vertical'
                padding: '5dp'
                spacing: '5dp'
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            orientation: 'horizontal'
            spacing: '20dp'
            padding: '5dp'
            size_hint: (1, None)
            height: '70dp'
            Button:
                id: processing
                text: _('starte Verarbeitung')
                font_size: '25dp'
            Button:
                id: newtask
                text: _('neue Aufgabe')
                font_size: '25dp'

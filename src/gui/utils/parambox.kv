<ParamBox>:

<ParamCheckBoxBox>:
    BoxLayout:
        orientation: 'horizontal'
        padding: ('25dp','0dp','0dp','0dp')
        Label:
            id: displayname
            text: 'parameter Name'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        CheckBox:
            id: valueparameter

<ParamDirBox>:
    BoxLayout:
        orientation: 'horizontal'
        padding: ('25dp','0dp','0dp','0dp')
        Label:
            id: displayname
            text: 'parameter Name'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            id: valueparameter
            text: ""
            size_hint: (1.5,1)
            shorten: True
            text_size: (self.width-20, None)
        Button:
            size_hint: (0.7,1)
            id: dirdialog
            text: _("Ordner ändern")

<ParamFileBox>:
    BoxLayout:
        orientation: 'horizontal'
        padding: ('25dp','0dp','0dp','0dp')
        Label:
            id: displayname
            text: 'parameter Name'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            id: valueparameter
            text:  ""
            size_hint: (1.5,1)
            shorten: True
            text_size: (self.width-20, None)
        Button:
            size_hint: (0.7,1)
            id: filedialog
            text: _("Datei ändern")

<ParamSpinnerBox>:
    BoxLayout:
        orientation: 'horizontal'
        padding: ('25dp','0dp','0dp','0dp')
        Label:
            id: displayname
            text: 'parameter Name'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Spinner:
            size_hint: (0.3,1)
            id: valueparameter
            text: 'test'
            values: 'test', 'test1'

<ParamNumberBox>:
    BoxLayout:
        orientation: 'horizontal'
        padding: ('25dp','0dp','0dp','0dp')
        Label:
            id: displayname
            text: 'parameter Name'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        TextInput:
            id: valueparameter
            text: str(valueslider.value)
            size_hint: (1.5,1)
            input_filter: int
        Slider:
            id: valueslider
            size_hint: (0.7,1)
            step: 1
            value: 50

<ParamStringBox>:
    BoxLayout:
        orientation: 'horizontal'
        padding: ('25dp','0dp','0dp','0dp')
        Label:
            id: displayname
            text: 'parameter Name'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        TextInput:
            size_hint: (2.2,1)
            id: valueparameter
